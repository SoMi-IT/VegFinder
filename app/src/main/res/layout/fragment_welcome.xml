<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_welcome__label_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="Welcome"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/tv_welcome__label_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Already have an account? Sign-In! Or Sign-Up if you don't have it."
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_welcome__label_1" />


                <Button
                    android:id="@+id/b_welcome_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="Sign-Up"
                    app:layout_constraintTop_toBottomOf="@id/tv_welcome__label_2" />

                <Button
                    android:id="@+id/b_welcome_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="Login"
                    app:layout_constraintTop_toBottomOf="@id/b_welcome_sign_up" />

                <Button
                    android:id="@+id/b_welcome_no_auth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Without Authentication"
                    app:layout_constraintTop_toBottomOf="@id/b_welcome_sign_up" />

        </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>