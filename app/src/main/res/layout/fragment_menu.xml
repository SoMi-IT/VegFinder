<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_menu_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/round_frame_selector"
        android:src="@drawable/ic_account"
        tools:ignore="VectorDrawableCompat"/>

    <ImageView
        android:id="@+id/iv_menu_discover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/round_frame_selector"
        android:src="@drawable/ic_discover"
        tools:ignore="VectorDrawableCompat"/>

    <ImageView
        android:id="@+id/iv_menu_sheets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/round_frame_selector"
        android:src="@drawable/ic_sheets"
        tools:ignore="VectorDrawableCompat"/>

    <ImageView
        android:id="@+id/iv_menu_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/round_frame_selector"
        android:src="@drawable/ic_map"
        tools:ignore="VectorDrawableCompat"/>


    </LinearLayout>